---
// ConfirmationSection.astro
---

<section class="relative w-full py-4 md:py-20 px-6 overflow-hidden">
    <!-- Flores decorativas IZQUIERDA - Repetidas verticalmente -->
    <div
        class="absolute left-0 top-0 bottom-0 w-8 md:w-16 pointer-events-none z-10"
    >
        <div
            class="flores-izq-confirm flex flex-col h-full justify-between opacity-0"
        >
            <img
                src="/imagenes/FloresLaterales.png"
                alt=""
                class="w-full h-auto mt-10"
            />
        </div>
    </div>

    <!-- Flores decorativas DERECHA - Repetidas verticalmente -->
    <div
        class="absolute right-0 top-0 bottom-0 w-8 md:w-16 pointer-events-none z-10"
    >
        <div
            class="flores-der-confirm flex flex-col h-full justify-between opacity-0"
        >
            <img
                src="/imagenes/FloresLaterales.png"
                alt=""
                class="mt-10 w-full h-auto scale-x-[-1]"
            />
        </div>
    </div>

    <div class="max-w-xl mx-auto relative z-20">
        <!-- Confirmación de Asistencia -->
        <div class="seccion-confirmacion text-center opacity-0">
            <p
                class="font-charm text-2xl md:text-lg text-[#C8B38B] mb-6 max-w-md mx-auto"
            >
                Por favor, confirme su asistencia
            </p>

            <!-- Texto indicativo -->
            <p class="font-charm text-lg md:text-xl text-[#b89850] mb-3">
                Haz click en el botón
            </p>

            <!-- Botones de confirmación -->
            <div class="flex flex-col gap-3 items-center mx-auto">
                <!-- Botón Novia -->

                <a
                    href="https://wa.link/nzuaic"
                    target="_blank"
                    class="inline-flex
                items-center justify-center gap-2 px-6 py-2.5 bg-[#C9A24D]
                hover:bg-[#b89850] text-white rounded-full transition-all
                duration-300 hover:shadow-lg hover:scale-105 font-medium
                text-sm"
                >
                    <svg
                        class="w-4 h-4"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                        ></path>
                    </svg>
                    <span>Confirmar asistencia</span>
                </a>
            </div>
        </div>
    </div>

    <style>
        .font-charm {
            font-family: "Charm", cursive !important;
        }
    </style>

    <script>
        import { gsap } from "gsap";
        import { ScrollTrigger } from "gsap/ScrollTrigger";

        gsap.registerPlugin(ScrollTrigger);

        // Animación de flores izquierda
        gsap.fromTo(
            ".flores-izq-confirm",
            {
                opacity: 0,
                x: -100,
                rotation: -10,
            },
            {
                opacity: 1,
                x: 0,
                rotation: 0,
                duration: 1.5,
                ease: "power3.out",
                scrollTrigger: {
                    trigger: ".flores-izq-confirm",
                    start: "top 85%",
                    toggleActions: "play none none none",
                },
            },
        );

        // Animación de flores derecha
        gsap.fromTo(
            ".flores-der-confirm",
            {
                opacity: 0,
                x: 100,
                rotation: 10,
            },
            {
                opacity: 1,
                x: 0,
                rotation: 0,
                duration: 1.5,
                ease: "power3.out",
                scrollTrigger: {
                    trigger: ".flores-der-confirm",
                    start: "top 85%",
                    toggleActions: "play none none none",
                },
            },
        );

        // Animación de sección de CONFIRMACIÓN
        gsap.fromTo(
            ".seccion-confirmacion",
            {
                opacity: 0,
                y: 60,
                scale: 0.95,
            },
            {
                opacity: 1,
                y: 0,
                scale: 1,
                duration: 1.3,
                ease: "power3.out",
                scrollTrigger: {
                    trigger: ".seccion-confirmacion",
                    start: "top 80%",
                    toggleActions: "play none none none",
                },
            },
        );
    </script>
</section>
