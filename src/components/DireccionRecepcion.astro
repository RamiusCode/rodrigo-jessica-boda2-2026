---
// ReceptionSection.astro
---

<section class="relative w-full -mt-2 md:-mt-20">
  <div class="max-w-2xl mx-auto relative">
    <!-- Contenido principal -->
    <div class="relative z-10 pt-4 pb-12 md:pt-40 md:pb-16 px-4 md:px-8">
      <!-- Contenedor con imagen de fondo ovalado -->
      <div class="reception-content relative max-w-md mx-auto opacity-0">
        <!-- Imagen de fondo ovalado -->
        <div class="absolute inset-0 flex items-center justify-center">
          <img
            src="/imagenes/cafe.webp"
            alt="Marco ovalado"
            class="w-full h-full object-contain"
          />
        </div>

        <!-- Contenido sobre el ovalado -->
        <div class="relative z-10 py-16 md:py-20 px-8 md:px-12">
          <!-- Título -->
          <div class="text-center mb-4">
            <h2
              class="font-charm text-2xl md:text-5xl text-[#C9A24D] mb-2 leading-tight"
            >
              Recepción
            </h2>
          </div>

          <!-- Ilustración de recepción -->
          <div class="flex justify-center mb-4">
            <img
              src="/imagenes/IconoDireccion.webp"
              alt="Recepción"
              class="w-20 md:w-28 h-auto object-contain"
            />
          </div>

          <!-- Información de lugar -->
          <div class="text-center mb-3">
            <p class="font-charm text-xl md:text-lg text-[#C9A24D] leading-10">
              Círculo de Oficiales del Ejército (COE)
            </p>
            <p
              class="font-charm text-xl md:text-xl text-[#C8B38B] font-medium mb-1 leading-10"
            >
              <span class="font-charm">Calle 15 de Calacoto, Zona Sur</span>
            </p>
          </div>

          <!-- Información de hora -->
          <!-- <div class="text-center mb-4">
            <p class="font-charm text-xl md:text-xl text-[#C9A24D]">
              Hora: <span class="font-charm font-bold">16:00</span>
            </p>
          </div> -->

          <!-- Separador -->
          <div class="flex items-center justify-center gap-3 mb-4">
            <div class="h-px w-12 md:w-16 bg-[#C9A24D]"></div>
            <div class="w-2 h-2 rounded-full bg-[#C9A24D]"></div>
            <div class="h-px w-12 md:w-16 bg-[#C9A24D]"></div>
          </div>

          <!-- Texto ¿Cómo llegar? -->
          <div class="text-center mb-4">
            <p
              class="font-charm text-xl md:text-2xl text-[#C8B38B] font-medium"
            >
              ¿Cómo llegar?
            </p>
          </div>

          <!-- Botón Ver Ubicación -->
          <div class="flex justify-center">
            <a
              href="https://maps.app.goo.gl/dKLbK5NfdmH1z5nk6"
              target="_blank"
              class="inline-block px-8 py-3 rounded-full text-white font-medium text-base md:text-lg transition-all duration-300 hover:shadow-lg hover:scale-105 bg-[#C9A24D] hover:bg-[#b89850]"
            >
              VER UBICACIÓN
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Para texto con Charm */
  .font-charm {
    font-family: "Charm", cursive !important;
  }

  /* Sombra suave para mejor legibilidad */
  p,
  h2 {
    text-shadow: 0 1px 3px rgba(255, 255, 255, 0.5);
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Animación del contenido principal
  gsap.fromTo(
    ".reception-content",
    {
      opacity: 0,
      y: 60,
      scale: 0.95,
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1.4,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".reception-content",
        start: "top 85%",
        toggleActions: "play none none none",
      },
    },
  );
</script>
